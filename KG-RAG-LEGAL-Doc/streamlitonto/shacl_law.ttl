@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ex: <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

ex:TitleShape
    a sh:NodeShape ;
    sh:targetClass ex:Title ;

    # Ensure ONLY ex:hasArticle is used from Title
    sh:property [
        sh:path ex:hasArticle ;
        sh:class ex:Article ;
        sh:minCount 1 ; # optional: require at least one article
    ] ;
