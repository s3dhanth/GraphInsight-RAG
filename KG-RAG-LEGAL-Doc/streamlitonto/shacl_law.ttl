@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix : <http://example.org/charter#> .

:TitleNoTitleAsArticle
    a sh:NodeShape ;
    sh:targetClass :Title ;
    sh:property [
        sh:path :hasArticle ;
        sh:class :Article ;  # âœ… Must be of class Article
        sh:message "A Title cannot be connected to another Title via hasArticle." ;
    ] .
