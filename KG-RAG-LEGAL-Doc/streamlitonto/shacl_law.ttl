@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://example.org/charter#> .

:TitleShape
  a sh:NodeShape ;
  sh:targetClass :Title ;

  # Enforce hasArticle links only to :Article
  sh:property [
    sh:path :hasArticle ;
    sh:class :Article ;         # Target must be an instance of :Article
    sh:minCount 1 ;
    sh:message "Each Title must have at least one hasArticle relation pointing to an Article." ;
  ] ;

  # Enforce titleID presence and datatype
  sh:property [
    sh:path :titleID ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:message "Each Title must have a titleID of type string." ;
  ] ;

  # Enforce titleName presence and datatype
  sh:property [
    sh:path :titleName ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:message "Each Title must have a titleName of type string." ;
  ] .
